@page
@model ferreteria_catalog.Pages.Productos.IndexModel
@{
    ViewData["Title"] = "Productos";
    Layout = "_Layout";
}

<h1>Productos</h1>

<form method="get" class="m-5">
    <div class="form-row" m-5>
        <div class="form-group col-md-4">
            <input type="text" name="searchString" class="form-control" placeholder="Buscar por nombre o código" value="" />
        </div>
        <div class="form-group col-md-4 m-3">
           @*  <select name="categoria" class="form-control">
                <option value="">Todas las Categorías</option>
                @foreach (var categoria in Model.Categorias)
                {
                    <option value="@categoria" @(categoria == Model.CategoriaSeleccionada ? "selected" : "")>@categoria</option>
                }
            </select> *@
        </div>
        <div class="form-group col-md-2" m-5>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>

<div class="row">
    @foreach (var item in Model.Productos)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@item.ImagenUrl" class="card-img-top" alt="@item.Nombre">
                <div class="card-body">
                    <h5 class="card-title">@item.Nombre</h5>
                    <p class="card-text">@item.Descripcion</p>
                    @* <p class="card-text"><strong>Precio:</strong> @item.Precio</p> *@
                    <p class="card-text"><strong>Stock:</strong> @item.Stock</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                        <small class="text-muted">@item.Marca</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
